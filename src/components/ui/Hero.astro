---
const {
  heading = "Casa Tsíntani",
  sub = "Clínica especializada en rehabilitación integral de adicciones y trastornos duales.",
  ctaText = "Habla con nosotros",
  ctaHref = "/contacto",
} = Astro.props;
---

<section
  class="relative overflow-hidden rounded-3xl border bg-gradient-to-br from-amber-50 via-white to-zinc-100"
>
  <div
    class="absolute inset-0 opacity-10 bg-[radial-gradient(circle_at_top_left,_#fbbf24_0%,_transparent_70%)]"
  >
  </div>

  <div
    class="relative max-w-6xl mx-auto px-6 py-20 grid md:grid-cols-2 gap-10 items-center"
  >
    <div class="motion-fade">
      <h1
        class="text-4xl md:text-5xl font-extrabold tracking-tight text-zinc-900"
      >
        {heading}
      </h1>
      <p class="mt-4 text-lg text-zinc-700">
        {sub}
      </p>
      <div class="mt-8">
        <a
          href={ctaHref}
          class="group inline-flex items-center gap-2 rounded-xl px-6 py-3 text-base font-medium
                 bg-amber-600 text-white shadow hover:bg-amber-700 transition-all duration-200"
        >
          {ctaText}
          <span
            aria-hidden
            class="transition-transform group-hover:translate-x-1">→</span
          >
        </a>
      </div>
      <!-- Confianza rápida -->
      <ul class="mt-6 flex flex-wrap gap-4 text-sm text-zinc-600">
        <li class="inline-flex items-center gap-2">
          <span>✓</span> Atención 24/7
        </li>
        <li class="inline-flex items-center gap-2">
          <span>✓</span> Modelo sin castigos
        </li>
        <li class="inline-flex items-center gap-2">
          <span>✓</span> Seguimiento 12 meses
        </li>
      </ul>
    </div>

    <!-- Imagen/ilustración opcional -->
    <div class="motion-up">
      <div
        class="aspect-[4/3] rounded-2xl border bg-white shadow-sm grid place-items-center text-zinc-400"
      >
        <span class="text-sm">Área para foto/ilustración de instalaciones</span>
      </div>
    </div>
  </div>
</section>

<style>
  .motion-fade {
    opacity: 0;
    transform: translateY(6px);
    animation: fadeUp 0.7s ease 0.1s forwards;
  }
  .motion-up {
    opacity: 0;
    transform: translateY(12px);
    animation: fadeUp 0.7s ease 0.25s forwards;
  }
  @keyframes fadeUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
