---
import { Image } from "astro:assets";
import AnimateOnView from "../../components/islands/AnimateOnView";
import MicroButton from "../../components/islands/MicroButton";

// Props
const {
  heading = "Casa Tsíntani",
  sub = "Clínica especializada en rehabilitación integral de adicciones y trastornos duales.",
  ctaText = "Habla con nosotros",
  ctaHref = "/contacto",
} = Astro.props;

import hero from "../../assets/hero.jpg";
---

<section
  class="relative overflow-hidden rounded-3xl border bg-gradient-to-br from-zinc-50 via-white to-zinc-100"
>
  <!-- Glow sutil -->
  <div
    class="pointer-events-none absolute inset-0 opacity-15 bg-[radial-gradient(1200px_600px_at_-10%_-10%,theme(colors.brand.300)/40%,transparent_60%)]"
  >
  </div>

  <div
    class="relative max-w-6xl mx-auto px-6 py-16 md:py-20 grid md:grid-cols-2 gap-10 items-center"
  >
    <!-- Columna texto -->
    <AnimateOnView client:visible class="space-y-6">
      <h1
        class="text-4xl md:text-5xl font-bold tracking-tight font-display text-zinc-900"
      >
        {heading}
      </h1>

      <p class="text-lg text-zinc-700">
        {sub}
      </p>

      <div class="pt-2">
        <MicroButton client:visible onClick={() => (location.href = ctaHref)}>
          {ctaText}
        </MicroButton>
      </div>

      <!-- Confianza rápida -->
      <ul class="mt-3 flex flex-wrap gap-4 text-sm text-zinc-600">
        <li class="inline-flex items-center gap-2">
          <span>✓</span> Atención 24/7
        </li>
        <li class="inline-flex items-center gap-2">
          <span>✓</span> Modelo sin castigos
        </li>
        <li class="inline-flex items-center gap-2">
          <span>✓</span> Seguimiento 12 meses
        </li>
      </ul>
    </AnimateOnView>

    <!-- Columna imagen -->
    <AnimateOnView client:visible class="relative">
      <div
        class="relative aspect-[4/3] md:aspect-[5/4] rounded-2xl border overflow-hidden shadow-soft bg-white"
      >
        <Image
          src={hero}
          alt="Instalaciones y entorno de Casa Tsíntani"
          format={["webp"]}
          widths={[640, 1024, 1440, 1920]}
          sizes="(min-width: 1024px) 50vw, 100vw" loading="eager" decoding="async"
          class="h-full w-full object-cover" />
        </Image>
      </div>
    </AnimateOnView>
  </div>
</section>
