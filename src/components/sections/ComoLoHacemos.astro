---
import Stagger from "../islands/Stagger";
import { Stethoscope, PencilLine, Handshake } from "lucide-astro";

const pasos = [
  {
    num: "01",
    title: "Evaluamos tu caso",
    desc: "Comenzamos con una valoración integral física, psicológica y familiar para entender tus necesidades reales.",
    img: "/src/assets/evaluamos2.jpg",
    icon: Stethoscope,
  },
  {
    num: "02",
    title: "Diseñamos tu plan",
    desc: "Creamos un programa de tratamiento personalizado, equilibrando evidencia científica y acompañamiento humano.",
    img: "/src/assets/evaluamos1.jpg",
    icon: PencilLine,
  },
  {
    num: "03",
    title: "Acompañamos tu proceso",
    desc: "Nuestro equipo interdisciplinario te acompaña durante la rehabilitación y seguimiento posterior de 12 meses.",
    img: "/src/assets/evaluamos4.jpg",
    icon: Handshake,
  },
];
---

<section class="py-20">
  <div class="max-w-6xl xl:max-w-7xl mx-auto px-6 text-center">
    <h2 class="text-3xl md:text-4xl font-display font-semibold text-brand-900 dark:text-surface-50 mb-12">
      Cómo lo hacemos
    </h2>

    <Stagger client:visible class="grid md:grid-cols-3 gap-6 xl:gap-8 text-left">
      {
        pasos.map((p) => {
          const Icon = p.icon;
          return (
            <article
              class="rounded-2xl overflow-hidden border border-zinc-200 dark:border-zinc-800 bg-white/70 dark:bg-zinc-900/60 backdrop-blur-sm shadow-sm hover:shadow-lg transition-all duration-[--dur-md] ease-[--ease-out-smooth]"
            >
              <!-- Imagen superior: alta en móvil, más “panorámica” en desktop -->
              <figure class="overflow-hidden">
                <div class="
                  aspect-[4/3]
                  sm:aspect-[16/9]
                  lg:aspect-[21/9]
                  2xl:aspect-[32/9]
                ">
                  <img
                    src={p.img}
                    alt={p.title}
                    loading="lazy"
                    class="h-full w-full object-cover object-center"
                    width="1600"
                    height="900"
                  />
                </div>
              </figure>

              <!-- Contenido -->
              <div class="p-6">
                <div class="flex items-center gap-3 mb-3">
                  <div class="inline-flex h-11 w-11 items-center justify-center rounded-xl bg-brand-100 dark:bg-brand-900/40 text-brand-700 dark:text-brand-300">
                    <Icon class="h-5 w-5" />
                  </div>
                  <span class="text-3xl font-display font-bold text-brand-300 dark:text-brand-400/80 select-none">
                    {p.num}
                  </span>
                </div>

                <h3 class="text-lg md:text-xl font-semibold text-brand-800 dark:text-brand-200 mb-2">
                  {p.title}
                </h3>
                <p class="text-brand-700/90 dark:text-brand-300 leading-relaxed">
                  {p.desc}
                </p>
              </div>
            </article>
          );
        })
      }
    </Stagger>
  </div>
</section>
