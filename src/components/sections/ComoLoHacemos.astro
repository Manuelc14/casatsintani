---
import Stagger from "../islands/Stagger";

const pasos = [
  {
    num: "01",
    title: "Evaluamos tu caso",
    desc: "Comenzamos con una valoración integral física, psicológica y familiar para entender tus necesidades reales.",
  },
  {
    num: "02",
    title: "Diseñamos tu plan",
    desc: "Creamos un programa de tratamiento personalizado, equilibrando evidencia científica y acompañamiento humano.",
  },
  {
    num: "03",
    title: "Acompañamos tu proceso",
    desc: "Nuestro equipo interdisciplinario te acompaña durante la rehabilitación y seguimiento posterior de 12 meses.",
  },
];
---

<section class="py-20 bg-zinc-50 dark:bg-zinc-950">
  <div class="max-w-6xl mx-auto px-6 text-center">
    <h2
      class="text-3xl md:text-4xl font-display font-semibold text-zinc-900 dark:text-white mb-12"
    >
      Cómo lo hacemos
    </h2>

    <div class="mb-10 grid md:grid-cols-3 gap-6">
      <div
        class="aspect-[16/6] rounded-2xl overflow-hidden border border-zinc-200 dark:border-zinc-800 bg-white/60 dark:bg-zinc-900/60 backdrop-blur"
      >
        <img
          src="/imgs/metodo-cover.jpg"
          alt="Nuestro método"
          loading="lazy"
          class="h-full w-full object-cover"
          width="1600"
          height="600"
        />
      </div>
      <div
        class="aspect-[16/6] rounded-2xl overflow-hidden border border-zinc-200 dark:border-zinc-800 bg-white/60 dark:bg-zinc-900/60 backdrop-blur"
      >
        <img
          src="/imgs/valoracion.jpg"
          alt="Valoración clínica"
          loading="lazy"
          class="h-full w-full object-cover"
          width="1600"
          height="600"
        />
      </div>
      <div
        class="aspect-[16/6] rounded-2xl overflow-hidden border border-zinc-200 dark:border-zinc-800 bg-white/60 dark:bg-zinc-900/60 backdrop-blur"
      >
        <img
          src="/imgs/seguimiento.jpg"
          alt="Seguimiento"
          loading="lazy"
          class="h-full w-full object-cover"
          width="1600"
          height="600"
        />
      </div>
    </div>

    <Stagger client:visible class="grid md:grid-cols-3 gap-10 text-left">
      {
        pasos.map((p) => (
          <article class="relative rounded-2xl border border-zinc-200 dark:border-zinc-800 bg-zinc-50/60 dark:bg-zinc-900/60 p-8 shadow-soft backdrop-blur-sm hover:shadow-lg transition-all duration-[--dur-md] ease-[--ease-out-smooth]">
            <span class="absolute -top-6 left-6 text-6xl font-display font-bold text-brand-300 dark:text-brand-400/80 select-none">
              {p.num}
            </span>
            <div class="inline-flex h-10 w-10 items-center justify-center rounded-xl bg-brand-100 dark:bg-brand-900/40 text-brand-700 dark:text-brand-300 shadow-sm">
              <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true">
                <path
                  d="M12 2l3 7h7l-5.6 4.1L18.8 21 12 16.9 5.2 21l2.4-7.9L2 9h7z"
                  fill="currentColor"
                />
              </svg>
            </div>
            <h3 class="mt-6 mb-3 text-xl font-semibold text-zinc-800 dark:text-zinc-100">
              {p.title}
            </h3>
            <p class="text-zinc-600 dark:text-zinc-400 leading-relaxed">
              {p.desc}
            </p>
          </article>
        ))
      }
    </Stagger>
  </div>
</section>
