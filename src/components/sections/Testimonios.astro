---
import TestimonialCarousel from "../islands/TestimonialCarousel.tsx";
import AnimateOnView from "../islands/AnimateOnView";
---

<section class="py-20 bg-zinc-50/60 dark:bg-zinc-900/60">
  <div class="max-w-3xl mx-auto px-6 text-center">
    <h2
      class="text-3xl md:text-4xl font-display font-semibold text-zinc-900 dark:text-white mb-8"
    >
      Testimonios reales
    </h2>

    <div
      class="mx-auto mb-8 inline-flex h-12 w-12 items-center justify-center rounded-full bg-brand-100 dark:bg-brand-900/40 text-brand-700 dark:text-brand-300"
    >
      <svg viewBox="0 0 24 24" class="h-6 w-6"
        ><path d="M7 7h6v6H9l-2 4V7zm8 0h6v6h-4l-2 4V7z" fill="currentColor"
        ></path></svg
      >
    </div>

    <AnimateOnView client:visible>
      <TestimonialCarousel client:visible />
    </AnimateOnView>
  </div>
</section>
