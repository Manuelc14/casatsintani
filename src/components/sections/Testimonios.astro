---
import TestimonialCarousel from '../islands/TestimonialCarousel.tsx'
import AnimateOnView from '../islands/AnimateOnView'
import { Sparkles } from 'lucide-astro'
---

<section class="px-6 py-20">
  <div class="mx-auto max-w-3xl text-center">
    <span
      class="bg-brand-50 dark:bg-brand-900/60 text-brand-700 dark:text-brand-200 inline-flex items-center gap-2 rounded-full px-3 py-1 text-[11px] font-semibold tracking-[0.16em] uppercase"
    >
      <Sparkles class="h-3.5 w-3.5" />
      Experiencias reales
    </span>

    <h2
      class="font-display text-brand-900 dark:text-surface-50 mt-4 text-3xl font-bold tracking-tight md:text-4xl"
    >
      Testimonios que inspiran
    </h2>

    <p class="mx-auto mt-3 max-w-md text-sm text-zinc-600 dark:text-zinc-300">
      Historias verdaderas de personas y familias que encontraron un nuevo comienzo.
    </p>

    <AnimateOnView client:visible>
      <div class="mt-10">
        <TestimonialCarousel client:visible />
      </div>
    </AnimateOnView>
  </div>
</section>
