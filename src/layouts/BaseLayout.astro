---
// src/layouts/BaseLayout.astro
const {
  title = "Casa Tsíntani",
  description = "Clínica de rehabilitación integral",
} = Astro.props;

import "../styles/global.css";
import Footer from "../components/layout/Footer.astro";
// import WhatsAppButton from "../components/islands/WhatsAppButton.tsx";
import ThemeToggle from "../components/islands/ThemeToggle.tsx";
import SiteHeader from "../components/islands/SiteHeader.tsx";
---

<html lang="es" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#3F4E4F" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600&family=Poppins:wght@500;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="alternate icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  </head>

  <body
    class="min-h-dvh bg-surface-50 text-brand-900 antialiased dark:bg-brand-900 dark:text-surface-50"
  >
    <SiteHeader client:load>
      <ThemeToggle />
    </SiteHeader>

    <div class="h-16"></div>

    <main class="max-w-6xl mx-auto px-4 py-10">
      <slot />
    </main>

    <Footer />

    <!-- <WhatsAppButton
      client:load
      phone="+52XXXXXXXXXX"
      text="Hola, me gustaría recibir información sobre los programas de tratamiento."
    /> -->
    <elevenlabs-convai agent-id="agent_6401k79w49etfzyr89pvvex9d7az"
    ></elevenlabs-convai><script
      src="https://unpkg.com/@elevenlabs/convai-widget-embed"
      async
      type="text/javascript"></script>
  </body>
</html>
